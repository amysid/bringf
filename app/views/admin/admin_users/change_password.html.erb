
<h1 class="heading">CHANGE PASSWORD</h1>
<div class="change-pass-s">
<div class="form-body">
  <%= form_for @admin_user,url: update_password_admin_admin_user_path, method: :post,html: {id: "change-password"} do |f|%>  
    <div class="form-group">
      <div class="row">
        <label class="col-sm-4"> Old Password  </label>
        <div class="col-sm-8">
          <%= f.password_field :old_password, class: "form-control custom-control", required: true, placeholder: "",autocomplete: "off"%>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
          <label class="col-sm-4"> New Password  </label>
          <div class="col-sm-8">
            <%= f.password_field :new_password, class: "form-control custom-control", required: true, placeholder: "",autocomplete: "off"%>
          </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label class="col-sm-4"> Confirm Password  </label>
        <div class="col-sm-8">
          <%= f.password_field :confirm_password, class: "form-control custom-control", required: true, placeholder: "",autocomplete: "off"%>
        </div>
      </div>
    </div>
   
    <div class="update-btn text-center">
      <button class="btn btn-success btn-common" type="submit">Update</button>
      <%= link_to 'Cancel', edit_admin_admin_user_path, class: "btn btn-danger btn-common" %>
    </div>
 
  <%end%>    
</div>
</div>
<script>
   $(document).ready(function(){
     
     $("#change-password").validate({
       
       rules: {
        
        "admin_user_old_password":{
           required: true,
           minlength: 8,
           maxlength: 32
   
         },    
         "admin_user[new_password]":{ 
           },
         "admin_user[confirm_password]":{
            equalTo: "#admin_user_new_password"
         } 
            
       },
      
     });
   
    
     $.validator.addMethod("userRegex", function(value, element) {
       return this.optional(element) || /^(?=[^@]*[A-Za-z])([a-zA-Z -])+$/i.test(value);
     }, "Please enter characters only.");
   
     $.validator.addMethod("noSpace", function(value, element) { 
       return value.indexOf(" ") < 0;
     }, "No space please.");
   
     $.validator.addMethod("emailRegex", function(value, element) { 
       return this.optional(element) || /^[A-Z0-9_]+([\.][A-Z0-9_]+)*@[A-Z0-9-]+(\.[a-zA-Z]{2,3})+$/i.test(value);
     }, "Please enter a valid email address.");
   
   
   
   });
   
</script> 