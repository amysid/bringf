<div class="">
        <h3>User List</h3>
        <div class="table-responsive cus-table">
           <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  
                  <th>User name</th>
                  <th>Email</th>
                  <th>Phone Number</th>
                  <th>Address</th>
                  <!-- <th>Age</th> -->
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
              <tbody>
              <% @users.each do |m| %>
                <tr>
                  
                  <td><%= "#{m.try(:first_name).truncate(15)} #{m.try(:last_name).truncate(15)}" rescue " " %></td> 
                  <!-- <td><%#= "#{m.try(:first_name)}"%></td> -->
                  <td><%= "#{m.try(:email)}"%></td>
                  <td><%= "#{m.try(:phone_no)}"%></td>
                  <td><%= "#{m.try(:full_address).truncate(25) }"%></td>
                  <td><%= link_to 'Edit', edit_admin_user_path(id: m.id),:class=>"btn btn-success" %>
                  <%= link_to 'Delete', admin_user_path(id: m.id),:data => {:confirm => "Are you sure you want to delete this user ?"},:class=>"btn btn-danger" , method: :delete %>
                   <% if m.is_block == true %>
                  <%= link_to 'Unblock', unblock_admin_user_path(id: m.id),:data => {:confirm => "Are you sure you want to unblock this user ?"},:class=>"btn btn-danger" %>
                  <%else%>
                  <%= link_to 'Block', unblock_admin_user_path(id: m.id),:data => {:confirm => "Are you sure you want to block this user ?"},:class=>"btn btn-warning" %></td>
                 <%end%>
                </tr>
              <% end %>
              </tbody>
            </table>
            <%= will_paginate @users,  renderer: BootstrapPagination::Rails %>
        </div>
      </div>