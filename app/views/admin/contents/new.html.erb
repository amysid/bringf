<section class="content">
      <div class="clearfix">
        <div class="global-heading user-head">Content Management</div>
        <div class="aduser-btn"><a href="/admin/users/new" class="btn btn-add">Add Content </a></div>
      </div>
    <div class="boxoutter-form"> 
       <fieldset class="global-fieldset">
              <legend>Add Contents</legend>
          <div class="content-form">
            <!-- <form> -->
            <%= form_for :content, url: admin_contents_path, html:  {id: "admin_content"}  do |f| %>
            	<div class="form-group">
                           <label for="">Title<span class="required">*</span> </label>
                           <!-- <input type="text" class="form-control custom-control" value="first_name"> -->
                           <%= f.text_field :title, class: "form-control custom-control",  placeholder: "Title"%>
                           <!-- <input class="form-control custom-control" placeholder="Title" name="user[first_name]" id="user_first_name" type="text">  -->
                           
              </div>
              <div class="form-group">
                           <label for="">Body<span class="required">*</span> </label>
                           
                           <%= f.cktext_area :body, class: "form-control", placeholder: "", required: true%>
                           <%#= f.text_area :title, class: "form-control custom-control",  placeholder: "Title"%>
                           
              </div>
              <div class="form-group">
                           <label for="">Slug<span class="required">*</span> </label>
                           <!-- <input type="text" class="form-control custom-control" value=""> -->
                           <%= f.text_field :slug, class: "form-control custom-control",  placeholder: "Slug"%>
                           
              </div>
              <div class="form-group">
                           <label for="">Meta keyboards<span class="required">*</span> </label>
                           <!-- <input type="text" class="form-control custom-control" value=""> -->
                           <%= f.text_field :meta_keyboard, class: "form-control custom-control",  placeholder: "Meta Keyboard"%>
                           
              </div>
                 <div class="form-group">
                           <label for="">Meta Description<span class="required">*</span> </label>
                           <!-- <input type="text" class="form-control custom-control" value="first_name"> -->
                           <%= f.text_area :meta_description, class: "form-control custom-control",  placeholder: "Meta Keyboard"%>
                           
              </div>
              <div class="form-group">
                  	<div class="checkbox">
                      
                      <%= f.check_box :published %> 
                      <%= f.label "Published" %> 
                      <!-- <label><input value="" type="checkbox">Published</label> -->
                    </div>
                    <div class="form-add">
                      
                       <%= submit_tag 'SUBMIT', :class => "btn btn-primary btn-md"%>
                    </div>
                  </div>
      	

            <!-- </form> -->
            <%end%>
           </div>
         </fieldset>
        </div>
</section>

