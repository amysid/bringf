<section class="content">
      <div class="clearfix">
        <div class="global-heading user-head">Content Management</div>
      </div>
    <div class="boxoutter-form"> 
       <fieldset class="global-fieldset">
              <legend>Edit Content</legend>
          <div class="content-form">
            <!-- <form> -->
            <%= form_for [:admin, @content], html: { id: "admin_content"} do |f|%>
            <%#= form_for :content, url: admin_contents_path, html:  {id: "admin_content"}  do |f| %>
            	<div class="form-group">
                           <label for="">Title<span class="required">*</span> </label>
                           <!-- <input type="text" class="form-control custom-control" value="first_name"> -->
                           <%= f.text_field :title, :readonly => true, class: "form-control custom-control",  placeholder: "Title"%>
                           <!-- <input class="form-control custom-control" placeholder="Title" name="user[first_name]" id="user_first_name" type="text">  -->
                           
              </div>
              <div class="form-group">
                           <label for="">Body<span class="required">*</span> </label>
                           
                           <%= f.cktext_area :body, class: "form-control", placeholder: "", required: true%>
                           
                           
              </div>
             
              <div class="form-group">
                  	
                    <div class="form-add">
                      
                       <%= submit_tag 'Submit', :class => "btn btn-primary btn-md"%>
                    </div>
                  </div>
      	

            <!-- </form> -->
            <%end%>
           </div>
         </fieldset>
        </div>
</section>

<style type="text/css">


.form-control.custom-control.txarea{height: auto;
resize: none;
min-height: 190px;}
.content-form{max-width: 600px;width: 100%;padding: 20px;}
.content-form .aduser-btn{float: none;}
.boxouter-form h5{position: relative;padding-left: 30px;font-size: 18px;color: #000;margin-top: 30px;}
.boxouter-form h5:before{position: absolute;
content: "";
background: #000;
top: 0px;
left: 0;
height: 1px;
width: 100%;}
.boxouter-form{border:1px solid #000;border-top: 0;}



</style>



<script>
$(document).ready(function() {
     $("#admin_content").validate({
    rules: {
      "content[title]": {
        required: true,
        minlength: 3,
        maxlength: 30
       
      },
      "content[slug]": {
        required: true,
        minlength: 3,
        maxlength: 30
       
      },
      
      "content[meta_keyboard]": {
        required: true,
        minlength: 3,
        maxlength: 30
       
      },
       "content[meta_description]": {
        required: true,
        minlength: 3,
        maxlength: 250
       
      }

    },

    submitHandler: function(form) {
      form.submit();
    }
   });

});

</script>
