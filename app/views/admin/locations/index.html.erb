              <thead>
                <tr>
                  
                  <th>Name</th>
                  <th>Address</th>
                  <!-- <th>Published</th> -->
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @locations.each do |m| %>
                <tr>
                  
                  <td><%= "#{m.try(:location_name)}" %></td>
                  <td><%= "#{m.try(:full_address)}"%></td>
                  <!-- <td><%#= "#{m.try(:timings).first.try(:published)}"%></td> -->
