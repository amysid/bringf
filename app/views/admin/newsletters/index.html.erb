 <h1 class="heading">SUBSCRIPTION MANAGEMENT</h1>
       
             
              <div class="box box-blue">
                <div class="box-body">
                  <div class="custom-table table-responsive">
                    <table class="table table-striped table-border">
                      <thead>
                          <tr>
                            <th>Email </th>
                            <th>Status </th>
                          </tr>
                      </thead>
                      <%#= "No user found." unless @users.present?%>
                        <% @subsciptions.each do |subscription| %>
                          <% unless subscription.eql?(nil) %>
                            <tbody>
                              <tr>
                                <td><%= subscription.try(:email) %></td>
                                <td>
                                <span class="subs_status" id="<%= subscription.id %>" >
                            <% if subscription.is_subscribed %>
                                  <i class = "btn-sm btn-success" style="width: 62px;display: inline-block;text-align: center;">  Active </i>
                                 <% else %>
                                    <i class = "btn-sm btn-danger" style="width: 62px;display: inline-block;text-align: center;"> Inactive </i>
                                <% end %>            
                                </span>                 
                                </td>                               
                                
                              </tr>                                
                            </tbody>
                          <%end%>
					    <%end%>
               <%= will_paginate @subsciptions %>
                    </table>
                  </div>                     
                </div>
              </div>
              
            <div class="right-inner">

<h1 class="heading">Content</h1>
    <div class="form-show-body">
      <!-- <form> -->
        <%#= form_for [:admin, @static_page],html: {id: "new_static_page"} do |f|%>
        <%= form_tag admin_newsletters_path do %>
          <div class="detail-form m-t-40 m-b-40">

            <div class="form-group">
              <div class="row">
                <label class="col-sm-4 col-md-3 control-label"></label>
                <div class="col-sm-8 col-md-7">
                  <%#= f.text_field :title, class: "form-control", required: true, placeholder: "" , :readonly => true %>
                </div>
              </div>
            </div>
           
            <div class="form-group">
              <div class="row">
                <label class="col-sm-4 col-md-3 control-label"></label>
                <div class="col-sm-8 col-md-7">
                  <%= cktext_area_tag :body, nil ,class: "form-control cktext", required: true, placeholder: "", name: "content[body]" %>
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <div class="text-center attendee-cent-s">
                <button class="btn btn-success btn-common" type="submit">Submit</button>                        
                <%#= link_to 'Cancel', admin_static_pages_path, class: "btn btn-danger btn-common" %>
              </div>
          </div>
          <!--   <div class="update-btn text-center">
              <button class="btn btn-success btn-common" href="my-account.html"> Save</button>
               <button class="btn btn-danger btn-common" href="my-account.html"> Cancel</button>
            </div> -->
        </div>
      <%end%>
    <!-- </form>         -->
  </div>
</div> 
              
          </div>
    </div>
  </div>

  <script type="text/javascript">
 

$( document ).ready(function() {
  $(".subs_status").click(function(){
     
    var subs_id = $(this).attr('id');
    var xyz = $(this).find('i');
    $.ajax({
           url: "/admin/newsletters/subscription_status_change", 
           type: "GET",
           data: {subs_id: subs_id},
           dataType: "script",
	       success: function(data) {
	        if (data == 'true' ){
	           xyz.removeClass();
             xyz.addClass('btn-sm btn-success');
             xyz.text('Active');
	        }
	        else if (data == 'false' ){
	           xyz.removeClass();
             xyz.addClass('btn-sm btn-danger');
             xyz.text('Inactive');
	        }

	       }
         })
  });
});


</script>
